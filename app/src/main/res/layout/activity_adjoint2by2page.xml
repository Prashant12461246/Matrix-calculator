<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adjoint2by2page"
    android:background="@drawable/main">

    <EditText
        android:id="@+id/etadj22a11"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="A11 :-"
        android:inputType="numberDecimal|numberSigned"
                tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="42dp" />

    <EditText
        android:id="@+id/etadj22a12"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/etadj22a11"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:hint="A12 :-"
        android:inputType="numberDecimal|numberSigned"
         />

    <EditText
        android:id="@+id/etadj22a21"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etadj22a11"
        android:layout_marginTop="119dp"
        android:ems="10"
        android:hint="A21 :-"
        android:inputType="numberDecimal|numberSigned"
         />

    <EditText
        android:id="@+id/etadj22a22"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etadj22a12"
        android:layout_alignTop="@+id/etadj22a21"
        android:ems="10"
        android:hint="A22 :-"
        android:inputType="numberDecimal|numberSigned"
         />

    <Button
        android:id="@+id/btadj2by2result"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="242dp"
        android:background="@drawable/shape"
        android:textColor="#ffffff"
        android:text="ADJOINT"/>

    <TextView
        android:id="@+id/tvadj2by2result"
        android:layout_width="302dp"
        android:layout_height="171dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:textColor="#ffffff"
        android:textSize="32sp" />
</RelativeLayout>